<html>
  <head>
    <style>
      .logo{
        color:black;
        font-family: "Times New Roman", Times, serif;
        margin-left:10px; 
        font-weight: bold;
        font-size: 25px;
        text-decoration:none
      },
      
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background:#a6a6a6;">
      <%= link_to "Ticket Booking", root_path ,class:"logo" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="d-flex justify-content-between collapse navbar-collapse" id="navbarSupportedContent">
      <div class='d-flex w-50 justify-content-around'>
        <div>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Bus", bus_path, class:"nav-link" %>
            </li>
          </ul>
        </div>
        <div>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Train", trains_index_path ,class:"nav-link" %>
            </li>
          </ul>
        </div>
        <div>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Flight", flights_index_path, class:"nav-link" %>
            </li>
          </ul>
        </div>
        <% if user_signed_in? %>
          <div>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <%= link_to "Your Bookings", allbookings_path(user_id:current_user.id) ,class:"nav-link"%>
              </li>
            </ul>
          </div>
            <div>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <%= link_to "History", history_path(user_id:current_user.id) ,class:"nav-link"%>
              </li>
            </ul>
          </div>
        <% end %>
    </div>
    <div class="d-flex flex-row mx-4">
      <% if user_signed_in? %> 
        <div class='mx-4'> Welcome <%= current_user.email %> </div> 
        <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
      <% else %>
        <%= button_to "Sign in", new_user_session_path %> 
      <% end %>
    </div>
    </form>
    </div>
    </nav>
  </body>
</html>

