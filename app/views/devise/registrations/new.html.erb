<html>
  <head>
    <style>
      .form-container{
        display:flex;
        flex-direction:col;
        justify-content:center;
        padding:50px;
      }
    </style>
  </head>
  <body>
    <div class='form-container'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>Sign up</h2>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-outline mb-4">
          <%= f.label :email ,class:"form-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id:"form2Example1", class:"form-control" %>
        </div>

        <div class="field form-outline mb-4">
          <%= f.label :password , for:"form2Example2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" , id:"form2Example2" ,class:"form-control"%>
        </div>

        <div class="field form-outline mb-4">
          <%= f.label :password_confirmation , for:"form2Example2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , id:"form2Example2" ,class:"form-control"%>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" ,class:"btn btn-primary btn-block mb-4" %>
        </div>
  
        <div class="text-center">
          <p>if you are a member? <%= render "devise/shared/links" %></p>
        </div>
      <% end %>
  
    </div>
  </body>
</html>
