<html>
  <head>
    <style>
      .form-container{
        display:flex;
        flex-direction:col;
        justify-content:center;
        padding:50px;
      } 
    </style>
  </head>
  <body>
    <div class='form-container'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form") do |f| %>
        
        <h2>Log in</h2>
  
        <div class="field form-outline mb-4">
          <%= f.label :email ,class:"form-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id:"form2Example1", class:"form-control"%>
        </div>
 
 
        <div class="field form-outline mb-4">
          <%= f.label :password , for:"form2Example2"%><br />
          <%= f.password_field :password, autocomplete: "current-password",id:"form2Example2" ,class:"form-control" %>
        </div>
  
        <div class="row mb-4">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" ,class:"btn btn-primary btn-block mb-4" %>
        </div>

        <div class="text-center">
          <p>Not a member? <%= render "devise/shared/links"%></p>
        </div>
      <% end %>
    </div>
  </body>
</html>


